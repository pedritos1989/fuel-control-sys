{% extends '::base.html.twig' %}

{% block block('subheader') %}

{% block header 'user.label'|trans %}

{% block subheader 'user.create'|trans %}

{% block container -%}
    {% embed '_smart_widget.html.twig' %}
        {% set config, collapse, refresh, remove = false, true, false, false %}
        {% block widgetheader %}
            {{ 'user.create'|trans }}
        {% endblock widgetheader %}

        {% block widgetbody -%}
            {% block fos_user_content -%}
                {% include "FOSUserBundle:Registration:register_content.html.twig" %}
            {% endblock fos_user_content -%}
        {% endblock widgetbody -%}
    {% endembed %}
{% endblock -%}

{% block javascripts %}
    <script type="text/javascript">
        $(document).ready(function () {
            $('.select2').select2();
        });
        $(function () {
            $('a.thumbnail').on('click', function (e) {
                e.preventDefault();

                $('input[id$="_avatar_file"]').trigger('click');
            });
        });
    </script>
{% endblock %}