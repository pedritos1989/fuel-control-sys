{% extends '::base.html.twig' %}

{% block block('subheader') %}

{% block header 'section.label'|trans %}

{% block subheader 'section.show'|trans %}

{% block container -%}
    {%- embed '_smart_widget.html.twig' %}
        {% set config, collapse, refresh, remove = false, true, false, false %}
        {% block widgetheader %}
            {{ 'section.show'|trans }}
        {% endblock widgetheader %}

        {% block widgetbody %}
            <div class="row">
                <div class="col-md-12">
                    <table class="table table-striped table-hover">
                        <tbody>
                        <tr>
                            <th>{{ 'section.name'|trans }}</th>
                            <td>{{ area.nombre|default('') }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'section.manager'|trans }}</th>
                            <td>{{ area.responsable|default('-') }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>

                <div class="col-md-12" id="button_actions">
                    <a class="btn btn-primary btn-sm" href="{{ path('area_edit', { 'id': area.id }) }}"
                       title="{{ 'actions.edit'|trans }}">
                        <i class="fa fa-edit"></i> {{ 'actions.edit'|trans }}</a>
                    <a class="btn btn-default btn-sm" href="{{ path('area_index') }}"
                       title="{{ 'actions.list'|trans }}">
                        <i class="fa fa-chevron-left"></i> {{ 'actions.list'|trans }}</a>
                    <a data-id="{{ area.id }}" data-action="area_delete"
                       href="javascript:;" class="btn btn-danger btn-sm tooltips delete-selection"
                       data-container="body" title="{{ 'actions.delete'|trans }}">
                        <i class="fa fa-trash-o"></i> {{ 'actions.delete'|trans }}</a>
                </div>
            </div>
        {% endblock widgetbody %}
    {%- endembed %}
{% endblock %}
