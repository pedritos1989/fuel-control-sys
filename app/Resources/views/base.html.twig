<script type="text/javascript" src="{{ asset('js/modernizr.min.js') }}"></script>
<script type="text/javascript" src="{{ asset('js/simplify.js') }}"></script>

<script type="text/javascript"
        src="{{ asset('bundles/app/js/DataTables/i18n/' ~ app.request.locale ~ '.js') }}"></script>

<script type="text/javascript" src="{{ asset('bundles/app/js/app.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/app/js/app.config.js') }}"></script>

<script src="{{ asset('bundles/fosjsrouting/js/router.js') }}" type="text/javascript"></script>
