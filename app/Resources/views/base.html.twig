{% from '_flashes.html.twig' import session_flash %}

<!DOCTYPE html>
<html lang="{{ app.request.locale|split('_')[0] }}">
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}{% trans %}Welcome to CB!{% endtrans %}{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="{% block metadescription %}{% endblock %}">
    <meta name="author" content="Pedro Ernesto Matos Santana <pedroernesto20@gmail.com>">

    <link rel="stylesheet" href="{{ asset('assets/vendor/bootstrap/dist/css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/vendor/font-awesome/css/font-awesome.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/vendor/ionicons/css/ionicons.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/vendor/select2/dist/css/select2.min.css') }}"/>
    <link rel="stylesheet" href="{{ asset('assets/vendor/DataTables/media/css/dataTables.bootstrap.min.css') }}">
    <link rel="stylesheet"
          href="{{ asset('assets/vendor/eonasdan-bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.min.css') }}"/>
    <link rel="stylesheet" href="{{ asset('assets/vendor/animate.css/animate.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/simplify.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/app/css/app.css') }}">

    {% block stylesheets %}{% endblock %}

    {% block favicon %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    {% endblock %}
</head>
<body class="{% block bodyclass %}overflow-hidden{% endblock bodyclass %}">
{% block body %}
    {# wrapper #}
    <div class="wrapper preload">
        {#{% include '_sidebar_right.html.twig' %}#}
        {% include '_header.html.twig' %}
        {% include '_sidebarmenu.html.twig' %}

        {% block maincontainer %}
            <div class="main-container">
                <div class="padding-md">
                    {% block breadcrumbs %}
                        {#<ul class="breadcrumb">#}
                        {#<li><span class="primary-font"><i class="icon-home"></i></span><a href="index.html"> Home</a></li>#}
                        {#<li>UI Elements</li>#}
                        {#<li>Basic Element</li>#}
                        {#</ul>#}
                        {{ apy_breadcrumb_trail_render() }}
                    {% endblock %}

                    {% block headers %}
                        <h3 class="header-text m-bottom-md m-top-lg">
                            {% block header %}Basic Elements{% endblock %}
                            <span class="sub-header">
							{% block subheader %}Basic Bootstrap Component{% endblock %}
						    </span>
                        </h3>
                    {% endblock %}

                    {# Session flashes #}
                    {%- block flashes -%}
                        <div class="row">
                            <div id="global-flashes" class="col-md-12">
                                {% if app.session.flashbag.peekAll|length > 0 %}
                                    {{ session_flash(true, true, 'alert-custom') }}
                                {% endif %}
                            </div>
                        </div>
                    {%- endblock flashes -%}

                    {# Container block #}
                    {% block container %}{% endblock %}
                </div><!-- ./padding-md -->
            </div><!-- /main-container -->
        {% endblock %}
    </div><!-- /wrapper -->
{% endblock %}

{% block scrolltop %}
    <a href="#" class="scroll-to-top hidden-print"><i class="fa fa-chevron-up fa-lg"></i></a>
{% endblock %}

<script type="text/javascript" src="{{ asset('assets/vendor/jquery/dist/jquery.min.js') }}"></script>
<script type="text/javascript" src="{{ asset('assets/vendor/bootstrap/dist/js/bootstrap.min.js') }}"></script>
