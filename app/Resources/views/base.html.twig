<script type="text/javascript" src="{{ asset('assets/vendor/bootbox/bootbox.min.js') }}"></script>
<script type="text/javascript" src="{{ asset('assets/vendor/select2/dist/js/select2.min.js') }}"></script>
<script type="text/javascript"
        src="{{ asset('assets/vendor/select2/dist/js/i18n/'~ app.request.locale ~'.js') }}"></script>
