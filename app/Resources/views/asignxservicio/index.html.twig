<div class="row">
    <div class="col-md-12">
        <a class="btn btn-primary btn-sm" href="#add">
            <i class="fa fa-plus-circle"></i> {{ 'actions.add'|trans }}
        </a>
    </div>
    <div class="col-md-12">
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>{{ 'service.assign.service'|trans }}</th>
                <th>{{ 'service.assign.amount'|trans }}</th>
                <th style="width: 20%;">{{ 'actions.label'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for asignacion in asignaciones %}
                <tr>
                    <td>{{ asignacion.servicio }}</td>
                    <td>{{ asignacion.cantidad }}</td>
                    <td>
                        <a href="#delete"
                           class="btn btn-danger btn-sm"
                           data-target="{{ path('asign_serv_delete', {'asignacionMensual': asignacion.asignacionMensual.id, 'id': asignacion.id}) }}">
                            <i class="fa fa-trash"></i> {{ 'actions.delete'|trans }}</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">{{ 'no_elements'|trans }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
