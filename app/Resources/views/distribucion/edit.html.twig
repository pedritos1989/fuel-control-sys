{% extends '::base.html.twig' %}

{% block block('subheader') %}

{% block header 'distribution.label'|trans %}

{% block subheader 'distribution.edit'|trans %}

{% block container -%}
    {% embed '_smart_widget.html.twig' %}
        {% set config, collapse, refresh, remove = false, true, false, false %}
        {% block widgetheader %}
            {{ 'distribution.edit'|trans }}
        {% endblock widgetheader %}

        {% block widgetbody %}
            {% include 'distribucion/_form.html.twig' with {'form': edit_form} %}
        {% endblock widgetbody %}
    {% endembed %}
{% endblock -%}

{% block javascripts %}
    <script type="text/javascript">
        $('.select2').select2();
        $('.datepicker').datetimepicker({
            'format': 'D/M/Y'
        });
    </script>
{% endblock %}