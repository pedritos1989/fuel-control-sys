{% extends '::base.html.twig' %}

{% block block('subheader') %}

{% block header 'card.label'|trans %}

{% block subheader 'card.edit'|trans %}

{% block container -%}
    {% embed '_smart_widget.html.twig' %}
        {% set config, collapse, refresh, remove = false, true, false, false %}
        {% block widgetheader %}
            {{ 'card.edit'|trans }}
        {% endblock widgetheader %}

        {% block widgetbody %}
            {% include 'tarjeta/_form.html.twig' with {'form': editForm} %}
        {% endblock widgetbody %}
    {% endembed %}
{% endblock -%}

{% block javascripts %}
    <script type="text/javascript">
        $('.select2').select2();
        $('.datepicker').datetimepicker({
            'format': 'D/M/Y'
        });
    </script>
{% endblock %}