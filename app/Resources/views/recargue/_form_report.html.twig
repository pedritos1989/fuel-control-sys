{{ form_errors(form) }}
<form id="{{ form.vars.id }}" name="{{ form.vars.full_name }}" action="{{ form.vars.action }}" method="get">
    <div class="row">

        <div class="col-md-3 col-sm-12">
            {{ form_row(form.mes, {'attr': {'class': 'monthpicker'}}) }}
        </div>

        {{ form_widget(form._token) }}

        <div id="button_reports" class="col-md-12">
            <button type="submit" id="{{ form.vars.id ~ '_report' }}" name="{{ form.vars.full_name ~ '[report]' }}"
                    class="btn btn-success btn-sm">
                <i class="fa fa-table"></i> {{ 'actions.report'|trans }}</button>
        </div>
    </div>
</form>