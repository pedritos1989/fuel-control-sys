{% extends '::base.html.twig' %}

{% block block('subheader') %}

{% block header 'request.label'|trans %}

{% block subheader 'request.show'|trans %}

{% block container -%}
    {%- embed '_smart_widget.html.twig' %}
        {% set config, collapse, refresh, remove = false, true, false, false %}
        {% block widgetheader %}
            {{ 'request.show'|trans }}
        {% endblock widgetheader %}

        {% block widgetbody %}
            <div class="row">
                <div class="col-md-12">
                    <table class="table table-striped table-hover">
                        <tbody>
                        <tr>
                            <th>{{ 'request.date.out'|trans }}</th>
                            <td>{{ solicitud.fechaHoraS|date('d/m/Y H:i') }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'request.date.in'|trans }}</th>
                            <td>{{ solicitud.fechaHoraR|date('d/m/Y H:i') }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'request.place'|trans }}</th>
                            <td>{{ solicitud.lugar }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'request.reason'|trans }}</th>
                            <td>{{ solicitud.motivo }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'request.people.count'|trans }}</th>
                            <td>{{ solicitud.cantpersona }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'request.section'|trans }}</th>
                            <td>{{ solicitud.area }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>

                <div class="col-md-12" id="button_actions">
                    <a class="btn btn-primary btn-sm" href="{{ path('solicitud_edit', { 'id': solicitud.id }) }}"
                       title="{{ 'actions.edit'|trans }}">
                        <i class="fa fa-edit"></i> {{ 'actions.edit'|trans }}</a>
                    <a class="btn btn-default btn-sm" href="{{ path('solicitud_index') }}"
                       title="{{ 'actions.list'|trans }}">
                        <i class="fa fa-chevron-left"></i> {{ 'actions.list'|trans }}</a>
                    <a data-id="{{ solicitud.id }}" data-action="solicitud_delete"
                       href="javascript:;" class="btn btn-danger btn-sm tooltips delete-selection"
                       data-container="body" title="{{ 'actions.delete'|trans }}">
                        <i class="fa fa-trash-o"></i> {{ 'actions.delete'|trans }}</a>
                </div>
            </div>
        {% endblock widgetbody %}
    {%- endembed %}
{% endblock %}
