{% extends '::base.html.twig' %}

{% block block('subheader') %}

{% block header 'car.label'|trans %}

{% block subheader 'car.edit'|trans %}

{% block container -%}
    {% embed '_smart_widget.html.twig' %}
        {% set config, collapse, refresh, remove = false, true, false, false %}
        {% block widgetheader %}
            {{ 'car.edit'|trans }}
        {% endblock widgetheader %}

        {% block widgetbody %}
            {% include 'carro/_form.html.twig' with {'form': edit_form} %}
        {% endblock widgetbody %}
    {% endembed %}
{% endblock -%}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('bundles/comb/js/carro/app.carro.manage.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/comb/js/carro/app.carro.card.js') }}"></script>
    <script type="text/javascript">
        $('.select2').select2();
        $('.datepicker').datetimepicker({
            'format': 'D/M/Y'
        });
        var _sel = new selection();
    </script>
{% endblock %}