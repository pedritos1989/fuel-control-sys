{{ form_errors(form) }}
<form id="{{ form.vars.id }}" name="{{ form.vars.full_name }}" action="{{ form.vars.action }}"
      method="post" enctype="multipart/form-data">
    {% if form.vars.method == 'PUT' %}
        <input type="hidden" name="_method" value="PUT">
        {% set editing = true %}
    {% endif %}

    <div class="row">
        <div class="col-md-12">
            {{ form_row(form.tarjeta, {'attr': {'class': 'select2 chip-tarjeta'}}) }}
        </div>
        <div class="col-md-12">
            {{ form_row(form.saldoInicial, {'attr': {'readonly': 1, 'class': 'input-saldo-inicial'}}) }}
        </div>
        <div class="col-md-12">
            {{ form_row(form.cantcomb, {'attr': {'class': 'input-cant-comb'}}) }}
        </div>
        <div class="col-md-12">
            {{ form_row(form.saldoFinal, {'attr': {'readonly': 1, 'class': 'input-saldo-final'}}) }}
        </div>
        <div class="col-md-12">
            {{ form_row(form.fecha, {'attr': {'class': 'datepicker'}}) }}
        </div>

        {{ form_widget(form._token) }}

        <div id="button_actions" class="col-md-12">
            <button type="submit" class="btn btn-primary btn-sm"
                    title="{{ (editing is not defined ? "actions.new" : "actions.edit")|trans }}">
                <i class="fa {{ editing is not defined ? "fa-save" : "fa-edit" }}"></i> {{ (editing is not defined ? "actions.new" : "actions.edit")|trans }}
            </button>
            <a class="btn btn-default btn-sm" href="{{ path("chip_index") }}"
               title="{{ (editing is not defined ? "actions.cancel" : "actions.list")|trans }}">
                <i class="fa {{ editing is not defined ? " fa-remove" : " fa-chevron-left" }}"></i> {{ (editing is not defined ? "actions.cancel" : "actions.list")|trans }}
            </a>
        </div>
    </div>
</form>