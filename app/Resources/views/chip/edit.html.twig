{% extends '::base.html.twig' %}

{% block block('subheader') %}

{% block header 'chip.label'|trans %}

{% block subheader 'chip.edit'|trans %}

{% block container -%}
    {% embed '_smart_widget.html.twig' %}
        {% set config, collapse, refresh, remove = false, true, false, false %}
        {% block widgetheader %}
            {{ 'chip.edit'|trans }}
        {% endblock widgetheader %}

        {% block widgetbody %}
            {% include 'chip/_form.html.twig' with {'form': edit_form} %}
        {% endblock widgetbody %}
    {% endembed %}
{% endblock -%}

{% block javascripts %}
    <script type="text/javascript">
        $('.select2').select2();
        $('.datepicker').datetimepicker({
            'format': 'D/M/Y H:mm'
        });
    </script>
    <script type="text/javascript" src="{{ asset('bundles/comb/js/chip/app.chip.dependencias.js') }}"></script>
{% endblock %}