<div class="row">
    <div class="col-md-12">
        <a class="btn btn-primary btn-sm" href="#add">
            <i class="fa fa-plus-circle"></i> {{ 'actions.add'|trans }}
        </a>
    </div>
    <div class="col-md-12">
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>{{ 'card.dist.card'|trans }}</th>
                <th>{{ 'card.dist.section'|trans }}</th>
                <th>{{ 'card.dist.service'|trans }}</th>
                <th>{{ 'card.dist.value'|trans }}</th>
                <th style="width: 20%;">{{ 'actions.label'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for dist in distribuciones %}
                <tr>
                    <td>{{ dist.tarjeta }}</td>
                    <td>{{ dist.tarjeta.area }}</td>
                    <td>{{ dist.tarjeta.servicio }}</td>
                    <td>{{ dist.asignacion }}</td>
                    <td>
                        <a href="#delete"
                           class="btn btn-danger btn-sm"
                           data-target="{{ path('dist_tarj_delete', {'distribucion': dist.distribucion.id, 'id': dist.id}) }}">
                            <i class="fa fa-trash"></i> {{ 'actions.delete'|trans }}</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">{{ 'no_elements'|trans }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
